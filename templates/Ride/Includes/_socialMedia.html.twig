<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            Soziale Netze
        </h3>
    </div>

    {% if socialNetworkProfiles|length > 0 %}
        <div class="panel-body text-center">
            <div class="btn-group-vertical">
                {% for profile in socialNetworkProfiles %}
                    {% set network = getNetwork(profile.network) %}

                    <a href="{{ profile.identifier }}" class="btn" style="background-color: {{ network.backgroundColor }}; color: {{ network.textColor }};">
                        <i class="{{ network.icon }}"></i>
                        {{ network.name }}
                    </a>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <div class="panel-body text-center">
        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="far fa-share-square"></i>
            in sozialen Netzen teilen
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li class="share-link">
                {{ shareDropdownLink(ride, 'mail') }}
            </li>

            <li class="share-link">
                {{ shareDropdownLink(ride, 'twitter') }}
            </li>

            <li class="share-link">
                {{ shareDropdownLink(ride, 'facebook') }}
            </li>

            <li class="share-link">
                {{ shareDropdownLink(ride, 'google') }}
            </li>

            <li class="share-link">
                {{ shareDropdownLink(ride, 'xing') }}
            </li>

            <li class="share-link">
                {{ shareDropdownLink(ride, 'linkedin') }}
            </li>

            <li class="share-link">
                {{ shareDropdownLink(ride, 'whatsapp') }}
            </li>

            <li class="share-link">
                {{ shareDropdownLink(ride, 'pinterest') }}
            </li>

            <li class="share-link">
                {{ shareDropdownLink(ride, 'reddit') }}
            </li>
        </ul>
    </div>
</div>
